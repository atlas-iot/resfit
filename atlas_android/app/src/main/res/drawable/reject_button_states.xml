<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:color="@android:color/white" android:state_enabled="true" android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/holo_red_dark" />
            <stroke android:width="1dp" android:color="@android:color/holo_red_dark" />
            <corners android:radius="3dp" />
        </shape>
    </item>
    <item android:color="@android:color/white" android:state_enabled="true" android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/holo_red_dark" />
            <stroke android:width="1dp" android:color="@android:color/holo_red_dark" />
            <corners android:radius="3dp" />
        </shape>
    </item>
    <item android:color="@android:color/holo_red_dark" android:state_enabled="true">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <stroke android:width="1dp" android:color="@android:color/holo_red_dark" />
            <corners android:radius="3dp" />
            <gradient android:angle="90" android:endColor="@android:color/holo_red_dark" android:startColor="@android:color/holo_red_dark" />
        </shape>
    </item>
    <item android:color="@android:color/darker_gray" android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <stroke android:width="1dp" android:color="@android:color/darker_gray" />
            <corners android:radius="3dp" />
            <gradient android:angle="90" android:endColor="@android:color/darker_gray" android:startColor="@android:color/darker_gray" />
        </shape>
    </item>
</selector>