<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:color="@android:color/black" android:state_enabled="true" android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#23395d" />
            <corners android:bottomLeftRadius="30dp" android:bottomRightRadius="30dp" android:radius="60dp" android:topLeftRadius="30dp" android:topRightRadius="30dp" />
        </shape>
    </item>
    <item android:color="@android:color/black" android:state_enabled="true" android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="#23395d" />
            <corners android:bottomLeftRadius="30dp" android:bottomRightRadius="30dp" android:radius="60dp" android:topLeftRadius="30dp" android:topRightRadius="30dp" />
        </shape>
    </item>
    <item android:color="@android:color/black" android:state_enabled="true">
        <shape android:shape="rectangle">
            <corners android:bottomLeftRadius="30dp" android:bottomRightRadius="30dp" android:radius="60dp" android:topLeftRadius="30dp" android:topRightRadius="30dp" />
            <solid android:color="#CFCFCF" />
        </shape>
    </item>

</selector>